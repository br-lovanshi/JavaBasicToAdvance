import java.util.Scanner; /* java is the package, util is the subpackage,
Scanner is the class of util package*/
import java.util.Arrays;
import java.util.List;
import java.util.ArrayList;

public class CoreJavaLearning{
  public static void main(String[] args){
    // write your code here
    
    // boolean array 
   boolean bArray[] = new boolean[2];
   bArray[1] = true;
   System.out.println(Arrays.toString(bArray));
   
//   num array
    int[] numArray = new int[3];
    numArray[2] = 3;
    System.out.println(Arrays.toString(numArray));
    
    // char array
    char[] charArray = new char[5];
    charArray[1] = 'A';
    charArray[3] = 'B';
    System.out.println(Arrays.toString(charArray));
    
    // double array
    double[] doubleArray = new double[4];
    doubleArray[3] = 3.3;
    doubleArray[1] = 2;
    System.out.println(Arrays.toString(doubleArray));
    
    // float array
    float[] fArray = new float[2];
    fArray[1] = 12;
    System.out.println(Arrays.toString(fArray));
    
    // min and max value
    System.out.println("Min Value " + Integer.MIN_VALUE + "\n Max Value " + Integer.MAX_VALUE);
    
    // convert premetive int to String
    int number = 10;
    String numToStr = Integer.toString(number);
    System.out.println(numToStr);
    
    // convert String to int 
    String str1 = "98745";
    int strToInt = Integer.parseInt(str1);
    System.out.println(strToInt);
    
    // character to string 
    char char1 = 'B';
    String charToStr = ""+char1;
    
    String charToStr1 = Character.toString(char1); 
    System.out.println(charToStr);
    
    // string to char array
    char[] strToCharArray  = str1.toCharArray();
    
    // Methods Arrays class that belongs to util package
    Arrays.sort(strToCharArray);
    
    // binary search Arrays class method
    int[] array1 = {1,3,4,5,7,8};
    int binarySearch = Arrays.binarySearch(array1,7);
    System.out.println(binarySearch);
    System.out.println(Arrays.toString(strToCharArray));
    
    // convert array to arrayList (only convert obj array to arraylist by this method)
    String[] strArray1 = {"one","two","three"};
    ArrayList<String> arrayList = new ArrayList<>(Arrays.asList(strArray1));
    System.out.println(arrayList);
    
  }
  
  
  /*
  -> Primitives are special type of data types that have no object, methods and feilds.
  -> There are some important packages and their classes 
  
  import java.lang :- contains fundamental classes 
  
  1. String:- length(), charAt(int index),toCharArray(), toUpperCase(), toLowerCase(), equals(String str),
              substring(int beginIntex),substring(int beginIntex,int endIndex),trim(), concat(String str)
  2. Integer :- parseInt(), toString(),equals(),Integer.valueOf(), MAX_VALUE, MIN_VALUE,
  3. Double, 
  4. Boolean,
  5. Character :- toUpperCase(), toLowerCase(), toString(), isDigit(), isLetter();
  6. Object :- equals(), hascode(), toString();
   
   import java.util :- utility package and contains data structure.
   import java.IO :- output input
   import java.util.stream :- provide stream api for data processing.
   import java.sql :- db connectivity
   
   -> Premitives are store in stack memory and object store in heap memory 
  */
  
}
